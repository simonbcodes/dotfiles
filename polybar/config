; ~/.config/polybar/config

[bar/main]
monitor = eDP1

background = #00000000

font-0 = "Source Code Pro;size=12:style=regular"

separator = "  |  "

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

modules-left = i3
modules-right = spotify battery date

[module/i3]
type = internal/i3

index_sort = true
enable_click = true
wrapping_scroll = true

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP1

poll-interval = 5

[module/spotify]
type = custom/script
interval = 1
format = <label>
exec = python ~/.config/polybar/spotify-module.py -f '{artist}: {song}'

[module/date]
type = internal/date

interval = 1.0
time = at %H:%M
date = %A, %B %d%
format = <label>
label = %date% %time%
